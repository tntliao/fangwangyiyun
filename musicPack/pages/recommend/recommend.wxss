.header {
  height: 300rpx;
  position: relative;
}

.header image {
  height: 100%;
  width: 100%;
}

.time {
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  line-height: 300rpx;
  top: 58%;
  left: 52%;
  transform: translateX(-50%) translateY(-50%);
  position: absolute;
  width: 300rpx;
  height: 100rpx;
  font-size: 35rpx;
  color: white;
}

.item .line {
  font-size: 30rpx;
  margin-left: 5rpx;
}

/* 推荐的歌曲 */
.RecommendedSongs {
  padding: 0 20rpx;
  transform: translateY(-10px);
  background: white;
  border-radius: 20rpx;
}

.introduce {
  display: flex;
  padding: 15rpx 0;
  font-size: 28rpx;
  justify-content: space-between;
}
.introduce .title{
  font-weight: bold;
}
.RecommendedSongsScroll {
  height: calc(100vh - 366.4rpx);
}

.RecommendedSongsScroll .item {
  position: relative;
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.RecommendedSongsScroll .item image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
  border-radius: 5rpx;
}

.RecommendedSongsScroll .item .song {
  height: 100rpx;
}

.RecommendedSongsScroll .item .song text {
  display: block;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
}

.RecommendedSongsScroll .item .iconfont {
  position: absolute;
  right: 0;
  font-size: 60rpx;
}