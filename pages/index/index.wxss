.indexContainer {
  height: 100%;
  background-color: #f5f5f5;
}

.indexHeader {
  padding: 0 20rpx;
  height: 80rpx;
  background-color: #e4e6e4;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.indexHeader .leftItem {
  color: #444544;
}

.indexHeader .centerItem {
  display: flex;
  justify-content: left;
  align-items: center;
  width: 80%;
  height: 60rpx;
  background-color: #fdfdfd;
  border-radius: 50rpx;
  color: #acacac;
}

.indexHeader .centerItem .title {
  font-size: 24rpx;
}

.indexHeader .rightItem .iconfont {
  font-size: 40rpx;
  color: #444544;
}

.indexHeader .centerItem .iconfont {
  margin: 0 20rpx;
}

/* 轮播图 */
.indexCarousel {
  background-image: linear-gradient(#e4e6e4, #e4e6e4, #fff);
}

.indexBaner {
  height: 300rpx;
  padding: 0 20rpx 20rpx;
}

.indexBaner .item {
  border-radius: 10rpx;
  overflow: hidden;
}

.indexBaner .item image {
  width: 100%;
  height: 100%;
}

/* 五个图标 */
.indexOption {
  padding: 0 20rpx;
  display: flex;
  background-color: #fff;
  justify-content: space-between;
}

.indexOption .Optionitem {
  display: flex;
  flex-direction: column;
  text-align: center;
}

.indexOption .Optionitem .itemShell {
  width: 90rpx;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #fff1f1;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.indexOption .Optionitem .iconfont {
  font-size: 35rpx;
  color: #ff4f4f;
}

.indexOption .Optionitem text {
  font-size: 20rpx;
  color: #414141;
}

/* 线 */
.line {
  padding-top: 30rpx;
  background-color: #fff;
  border-bottom: 4rpx solid #f5f5f5;
}

/* 推荐内容 */
.recommendComtent {
  margin-bottom: 20rpx;
  padding: 0 20rpx;
  background-color: #fff;
}

.scrollView {
  display: flex;
  height: 276rpx;
}

.recommendItem {
  width: 200rpx;
  height: 281rpx;
  margin-right: 15rpx;
  display: flex;
  flex-direction: column;
}

.recommendItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.recommendItem .title {
  width: 200rpx;
  font-size: 22rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 歌曲排行榜 */
.rankingContainer{
  border-radius: 20rpx;
  overflow: hidden;
}
.ranking {
  height: 365rpx;
  padding-left: 20rpx;
  padding-bottom: 20rpx;
  background-color: #ffffff;
}

.ranking .item {
  padding-top: 20rpx;
  text-align: center;
  background-color: #ffffff;
  border-radius: 15rpx;
  box-sizing: border-box;
  border-right: 20rpx solid transparent;
  border: 1px solid rgba(0, 0, 0, .1);
}

.ranking .item .title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #343434;
  margin-bottom: 20rpx;
}

.ranking .item .itemContainer {
  display: flex;
  flex-direction: column;
}

.ranking .item .itemContainer>view {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
  padding-left: 22rpx;
}

.ranking .item .itemContainer image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
}

.ranking .item .itemContainer .serial {
  margin: 0 22rpx;
  font-size: 24rpx;
}

.ranking .item .itemContainer .songTitle {
  font-size: 28rpx;
  color: #252525;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 240rpx;
}

.ranking .item .itemContainer .author {
  font-size: 20rpx;
  color: #949494;
}