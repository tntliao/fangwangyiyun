.personalContainer {
  height: 100%;
  background-color: #f5f5f5;
  padding: 0 20rpx;
}

/* 头部 */
.indexHeader {
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.indexHeader .leftItem {
  color: #444544;
}

.indexHeader .rightItem .iconfont {
  font-size: 40rpx;
  color: #313131;
}

/* 用户头像 */
.userAvatar {
  margin: 10rpx 0 40rpx;
  padding-left: 37rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
}

.userAvatar .avatar {
  width: 120rpx;
  height: 120rpx;
  margin-right: 25rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid #ffffff;
}

.userAvatar image {
  width: 100%;
  height: 100%;
}

.userAvatar text {
  color: #313131;
  font-weight: bold;
}

.userAvatar text .iconfont {
  color: #000000;
  font-weight: bold;
}

/* 功能块 */
.functionArea {
  height: 480rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
}

/* 最近播放记录 */
.playbackRecord {
  height: 230rpx;
  /* padding-top: 12rpx; */
  padding: 10rpx 22rpx 0;
  background-color: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
}

.playbackRecord .title {
  margin-left: 24rpx;
  font-size: 22rpx;
  color: #999999;
}

.playbackRecordScroll {
  display: flex;
  margin-top: 6rpx;
  height: 180rpx;
}

.playbackRecordScroll image {
  width: 180rpx;
  height: 180rpx;
  margin-right: 10rpx;
  border-radius: 10rpx;
  flex-shrink: 0;
}